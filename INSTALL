if [ ! -d "$HOME/bin" ]; then
  ln -sf $HOME/dotfiles/bin $HOME/bin
fi

ln -sf $HOME/dotfiles/git/gitconfig $HOME/.gitconfig
ln -sf $HOME/dotfiles/git/gitignore.global $HOME/.gitignore.global

ln -sf $HOME/dotfiles/config/inputrc $HOME/.inputrc
ln -sf $HOME/dotfiles/config/gemrc $HOME/.gemrc
ln -sf $HOME/dotfiles/config/irbrc $HOME/.irbrc
ln -sf $HOME/dotfiles/config/octaverc $HOME/.octaverc
ln -sf $HOME/dotfiles/config/eaglerc $HOME/.eaglerc
ln -sf $HOME/dotfiles/config/pythonrc $HOME/.pythonrc
ln -sf $HOME/dotfiles/config/ctags $HOME/.ctags
ln -sf $HOME/dotfiles/config/lessfilter $HOME/.lessfilter
ln -sf $HOME/dotfiles/config/yarnrc $HOME/.yarnrc

mkdir -p $HOME/config
if [ ! -d "$HOME/config/matplotlib" ]; then
  ln -sf $HOME/dotfiles/config/matplotlib $HOME/config/matplotlib
fi

mkdir -p $HOME/.nvm

ln -sf $HOME/dotfiles/postgres/psqlrc $HOME/.psqlrc
ln -sf $HOME/dotfiles/postgres/editrc $HOME/.editrc
