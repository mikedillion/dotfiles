[include]
	path = ~/dotfiles_private/git/config

[core]
	pager = less
	editor = vim
	ignorecase = true
	compression = 0
	excludesfile = ~/.gitignore.global

[push]
	default = current

[pull]
	default = current
	rebase = true

[rebase]
	autosquash = true

[commit]
	verbose = true

[color]
	status = always
	branch = always
	ui = always
	diff = auto
	interactive = always
	grep = always
	pager = true
	decorate = always
	showbranch = always

[color "grep"]
	linenumber = blue
	filename = green bold

[gpg]
	program = gpg

[credential "https://github.com"]
	helper = osxkeychain

[credential "https://git-codecommit.*.amazonaws.com"]
	helper = !aws --profile $AWS_PROFILE codecommit credential-helper $@
	UseHttpPath = true

[hub]
	protocol = https

[diff]
	tool = Kaleidoscope
[difftool]
	prompt = false
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[merge]
	tool = Kaleidoscope
[mergetool]
	prompt = false
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true

