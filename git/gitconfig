[include]
	path = ~/dotfiles_private/git/config

[core]
	pager = less
	# pager = diff-so-fancy | less --tabs=4 -RFX
	editor = vim
	ignorecase = true
	compression = 0
	excludesfile = ~/.gitignore.global

[push]
	default = current

[pull]
	default = current
	rebase = true

[rebase]
	autosquash = true

[commit]
	verbose = true

[color]
	status = always
	branch = always
	ui = always
	# ui = true
	diff = auto
	interactive = always
	grep = always
	pager = true
	decorate = always
	showbranch = always

[color "grep"]
	linenumber = blue
	filename = green bold

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse

[gpg]
	program = gpg

[credential "https://github.com"]
	helper = osxkeychain

[credential "https://git-codecommit.*.amazonaws.com"]
	helper = !aws --profile $AWS_PROFILE codecommit credential-helper $@
	UseHttpPath = true

[hub]
	protocol = https

[diff]
	tool = Kaleidoscope
	# tool = bcomp
	# tool = sourcetree
[difftool]
	prompt = false
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[difftool "bcomp"]
	cmd = "/usr/local/bin/bcomp" "$LOCAL" "$REMOTE"
	trustExitCode = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =

[merge]
	tool = Kaleidoscope
	# tool = bcomp
	# tool = sourcetree
[mergetool]
	prompt = false
	 keepBackup = false
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[mergetool "bcomp"]
	trustExitCode = true
	cmd = "/usr/local/bin/bcomp" "$LOCAL" "$REMOTE" "$BASE" "$MERGED"
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[web]
	browser = ch

[browser "ch"]
	cmd = open -a \"/Applications/Google Chrome.app\"

[alias]
	br = branch
	ci = commit
	cl = clone
	co = checkout
	di = diff
	ls = status
	pl = pull
	pom = push origin master
	pu = push
	r = reset
	rb = rebase
	rl = reflog
	st = status
	# https://git-scm.com/docs/pretty-formats
	ll = log --pretty=format:$'%ad \t %an \t %s' --date=relative --
	lf = log --format=fuller
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	lag = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
	blog = log --graph --simplify-by-decoration --pretty=format:'%d' --all
	url = !bash -c 'git config --get remote.origin.url | sed -E "s/.+:\\(.+\\)\\.git$/https:\\\\/\\\\/github\\\\.com\\\\/\\\\1/g"'
	ag = grep-with-smartcase -I --perl-regexp --break --heading --line-number
	ack = grep-with-smartcase -I --perl-regexp --break --heading --line-number
	dad = !echo "$(curl --silent https://icanhazdadjoke.com/)" | fold -w 60 -s
